{{ 'section-technical-details.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


{% if product.metafields.custom.product_general_1.value != blank %}
    <div class="technical-details section-{{ section.id }}-padding">
        <div class="page-width">
                <div class="heading-title">
                    <h4>
                        {{ section.settings.title | escape }}
                    </h4>
                </div>
                {% render 'product-metafields' %}
            </div>    
    </div>
{% endif %}


{% schema %}
{
  "name": "t:sections.technical-details.name",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Technical Specification",
      "label": "t:sections.technical-details.settings.title.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.technical-details.presets.name"
    }
  ]
}
{% endschema %}
